<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>

<VBox alignment="TOP_CENTER" prefHeight="500" prefWidth="600" spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HomeController">
    
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Manajemen Pengeluaran Harian">
      <textFill>
         <RadialGradient centerX="0.37168141170940566" centerY="0.2537878426638516" radius="1.0">
            <stops>
               <Stop>
                  <color>
                     <Color red="1.0" green="0.44999998807907104" />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="0.031578946858644485" blue="0.4736842215061188" />
                  </color>
               </Stop>
            </stops>
         </RadialGradient>
      </textFill></Label>
    
    <HBox spacing="10">
        <Label text="Keterangan:" />
        <TextField fx:id="txtKeterangan" promptText="Contoh: Beli makan" />
    </HBox>
    <HBox spacing="10">
        <Label text="Jumlah (Rp):" />
        <TextField fx:id="txtJumlah" promptText="Contoh: 25000" />
    </HBox>
    <HBox spacing="10">
        <Label text="Tanggal:" />
        <DatePicker fx:id="dpTanggal" />
    </HBox>
    <HBox spacing="10">
        <Label text="Kategori:" />
        <ComboBox fx:id="cbKategori" promptText="Pilih kategori" />
    </HBox>
    <HBox spacing="10">
        <Button fx:id="btnTambah" onAction="#handleAdd" text="Add">
         <effect>
            <InnerShadow height="31.0" radius="18.932499999999997" width="46.73">
               <color>
                  <Color red="0.9578947424888611" green="0.6652047038078308" blue="0.37251460552215576" />
               </color>
            </InnerShadow>
         </effect></Button>
        <Button fx:id="btnUpdate" onAction="#handleUpdate" text="Update">
         <effect>
            <InnerShadow height="21.64" radius="17.34" width="49.72">
               <color>
                  <Color red="0.7688888907432556" green="0.42222222685813904" blue="1.0" />
               </color>
            </InnerShadow>
         </effect></Button>
        <Button fx:id="btnHapus" onAction="#handleDelete" text="Delete">
         <effect>
            <InnerShadow height="32.7" radius="17.020000000000003" width="37.38">
               <color>
                  <Color red="1.0" green="0.49259260296821594" blue="0.49259260296821594" />
               </color>
            </InnerShadow>
         </effect></Button>
        <Button fx:id="btnClear" onAction="#handleClear" text="Clear">
         <effect>
            <InnerShadow height="37.38" radius="19.942500000000003" width="44.39">
               <color>
                  <Color red="0.49000000953674316" green="0.6485660076141357" blue="1.0" />
               </color>
            </InnerShadow>
         </effect></Button>
    </HBox>
    <TableView fx:id="tableView" prefHeight="300" prefWidth="580">
        <columns>
            <TableColumn fx:id="colKeterangan" prefWidth="150" text="Keterangan" />
            <TableColumn fx:id="colJumlah" prefWidth="125" text="Jumlah" />
            <TableColumn fx:id="colTanggal" prefWidth="150" text="Tanggal" />
            <TableColumn fx:id="colKategori" prefWidth="150" text="Kategori" />
        </columns>
    </TableView>
</VBox>
