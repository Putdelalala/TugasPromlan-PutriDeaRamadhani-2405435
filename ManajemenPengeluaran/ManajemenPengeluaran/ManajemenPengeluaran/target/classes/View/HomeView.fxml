<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.HomeController" spacing="10" alignment="TOP_CENTER"
      prefWidth="600" prefHeight="500" style="-fx-padding: 15;">
    
    <Label text="Manajemen Pengeluaran Harian" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <HBox spacing="10">
        <Label text="Keterangan:"/>
        <TextField fx:id="txtKeterangan" promptText="Contoh: Beli makan"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Jumlah (Rp):"/>
        <TextField fx:id="txtJumlah" promptText="Contoh: 25000"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Tanggal:"/>
        <DatePicker fx:id="dpTanggal"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Kategori:"/>
        <ComboBox fx:id="cbKategori" promptText="Pilih kategori"/>
    </HBox>
    <HBox spacing="10">
        <Button fx:id="btnTambah" text="Tambah" onAction="#handleAdd"/>
        <Button fx:id="btnUpdate" text="Update" onAction="#handleUpdate"/>
        <Button fx:id="btnHapus" text="Delete" onAction="#handleDelete"/>
        <Button fx:id="btnClear" text="Clear" onAction="#handleClear"/>
    </HBox>
    <TableView fx:id="tableView" prefHeight="300" prefWidth="580">
        <columns>
            <TableColumn fx:id="colKeterangan" text="Keterangan" prefWidth="150"/>
            <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="125"/>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="150"/>
            <TableColumn fx:id="colKategori" text="Kategori" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>